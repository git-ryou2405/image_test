
<!-- ショップ名 -->
<p class="user-name">ショップ名：<%= @shop.name %></p>

<div class="mt-2 mb-3" style="border: solid 1px black;"></div>

<!-- 複数イメージ -->
<% if @shop.shop_files.present? %>
  <% @shop.shop_files.each do |f| %>
    <%= image_tag f.file.url, width: "100", height: "100" %>
  <% end %>
<% end %>

<div class="mt-2 mb-3" style="border: solid 1px black;"></div>

<%= link_to "ショップ情報の編集", edit_shop_path(id: @shop.id), class: "btn btn-sm btn-primary" %>

<div class="mt-3 mb-3">
  <%= link_to "戻る", root_path, class: "btn btn-sm btn-secondary" %>
</div>
