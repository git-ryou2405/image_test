<h2>ショップ情報の編集</h2>

<div class="mt-2 mb-3" style="border: solid 1px black;"></div>

<%= form_with(model: @shop, local: true, method: :patch) do |f| %>

  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>
  
  <div style="margin-top: 10px; width: 600px; border: solid 1px gray;"></div><br>
  
  <!-- 複数イメージ -->
  <%= f.fields_for :shop_files do |i| %>
    <%= i.label :file, "複数イメージ" %>
    <%= i.file_field :file, name: "shop_files[file][]" %>
    <%# <%= i.file_field :file, multiple: true, name: "shop_files[file][]" %>
    <%= i.hidden_field :id, value: i.object.id %>
  <% end %>
  
  <%= f.label :imgs, "複数イメージ" %>
  <%= f.file_field :imgs, multiple: true %>
  
  <div style="margin-top: 10px; width: 600px; border: solid 1px gray;"></div><br>
  
  <%= f.submit "更新", class: "btn btn-sm btn-primary" %>
<% end %>

<div class="mt-2 mb-3" style="border: solid 1px black;"></div>

<div class="mt-3 mb-3">
  <%= link_to "戻る", shop_path(@shop.id), class: "btn btn-sm btn-secondary" %>
</div>
